{
  "compilerOptions": {
    "target": "es2020", // Or newer, compatible with your target Node.js
    "module": "node16", // Or "nodenext" or "esnext". Use "commonjs" if not using "type": "module"
    "moduleResolution": "node16", // Or "nodenext"
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true, // Generates .d.ts files
    "sourceMap": true // Optional: for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}